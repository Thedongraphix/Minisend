# MiniSend Environment Variables Template
# Copy this file to .env.local and fill in your values

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# PayCrest API Configuration
PAYCREST_API_KEY=your_paycrest_client_id
PAYCREST_WEBHOOK_SECRET=your_paycrest_client_secret
PAYCREST_BASE_URL=https://api.paycrest.io

# OnchainKit Configuration
NEXT_PUBLIC_ONCHAINKIT_API_KEY=your_onchainkit_api_key
NEXT_PUBLIC_ONCHAINKIT_PROJECT_NAME=Minisend
NEXT_PUBLIC_ICON_URL=https://minisend.xyz/favicon.ico

# Application URLs
NEXT_PUBLIC_URL=https://minisend.xyz
NEXT_PUBLIC_WEBHOOK_URL=https://minisend.xyz/api/paycrest/webhook

# Admin Configuration (optional)
ADMIN_DASHBOARD_KEY=your_secure_admin_key_for_analytics

# Redis Configuration (optional - for advanced features)
REDIS_URL=your_redis_url
REDIS_TOKEN=your_redis_token

# Development/Testing
NODE_ENV=production